    android:versionCode="13"
    android:versionName="1.0.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="BuildersActivity" android:label="@string/btn_builders">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="BuilderActivity"></activity>
        <activity android:name="SettingsActivity" android:label="@string/menu_settings"></activity>
        <activity android:name="BuildActivity"></activity>
        <activity android:name="StepActivity"></activity>
        <activity android:name="StepsActivity"></activity>
    </application>

</manifest>