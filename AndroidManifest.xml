<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buildbotwatcher"
    android:versionCode="7"
    android:versionName="0.6" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="BuildbotWatcherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="SettingsActivity" android:label="@string/btn_settings"></activity>
        <activity android:name="WaterfallActivity" android:label="@string/btn_waterfall"></activity>
        <activity android:name="BuildersActivity" android:label="@string/btn_builders"></activity>
        <activity android:name="BuilderActivity"></activity>
        <activity android:name="BuildActivity"></activity>
    </application>

</manifest>